doctype html
html
  include ./inc/head.jade
  script(type='text/javascript').
    var sessionName = '#{sessionName}';var pageNo = #{pageNo};
  body
    div#cursors
    if sessionName && pageNo
      div#bg-image(style="background-image: url(\"/uploads/test#{pageNo}.png\")")
    canvas#paper(width="1900" height="1000") Your browser doesn't support canvas!
    //div#instructions
      //h1#bigTitle Connecting...
      //h2 You will see everyone else drawing
      //h3 Note: Drawings are saved on the server. Come back any time!
    div#settingsPanel
      div#settingsPanelTab Settings
      h2 You're in
      h3#canvasName #{canvasName}
      h3#sessionName #{sessionName}
      h3#pageNo #{pageNo}
      label(for="usernameInput") Chat Name
      input(type="text" id="usernameInput" placeholder="Username: Guest")

      table#serverStats
      div#bottomAttribution
        p
          a(id="statsShow" href="javascript:void(0)") Server Stats
        p v0.5 by <a href="https://timatooth.com">Tim Sullivan</a>
        p Source code on <a href="https://github.com/timatooth/node-multidraw">GitHub</a>
    script(src="//code.jquery.com/jquery-2.1.1.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="/draw.min.js")
